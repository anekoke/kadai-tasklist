<ul class="media-list">
    <table class="table table-striped">
    <thead>
      <tr>
        <th>ステータス</th>
        <th>タスク</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>
    <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <th><%= task.status %></th>
        <th><%= task.content %></th>
        <th><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-default btn-xs' %>
        </th>
        <th><% if current_user == task.user %>
            <%= link_to 'Delete', task, method: :delete, data:{confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
            <% end %>
        </th>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= paginate @tasks %>
</ul>